---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import coverImage from "../assets/images/cover.png";
import ContactForm from "../components/ContactForm.astro";
import { AboutSection } from "../components/AboutSection";
import { ServiceSection } from "../components/ServiceSection";
import { GradientTitle } from "../components/ui/GradientTitle";
import { WorkSection } from "../components/WorkSection";
---

<Layout title="CloudWay">
  <main
    class="m-auto p-4 sm:w-[800px] lg:w-1/2 max-w-[calc(100%-2rem)] text-custom-dark dark:text-custom-light text-xl leading-relaxed"
  >
    <h1 class="text-5xl font-bold leading-tight text-center mb-4">
      We are <GradientTitle title="CloudWay" />
    </h1>
    <p class="text-2xl text-center mx-4">
      Elevate your business with our cutting-edge software solutions.
    </p>
    <img
      src={coverImage.src}
      alt="Wayne Foster Jr"
      class="rounded-full mx-auto mb-4"
    />
    <ul role="list" class="grid lg:grid-cols-2 grid-cols-1 gap-8 p-0 py-2">
      <Card
        href="/work"
        title="Work"
        body="Check out our latest projects and apps."
      />
      <Card
        href="/blog"
        title="Blog"
        body="Read more about our thoughts on tech."
      />
    </ul>
    <section class="mt-8">
      {/* About Us Section */}
      <AboutSection />

      {/* Services Section */}
      <ServiceSection />

      {/* Work Section */}
      <WorkSection />
      <ContactForm />
    </section>
  </main>
</Layout>
