---
import Layout from "./Layout.astro";
import moment from "moment";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 mt-10">
    <h1 class="text-3xl font-bold mb-4">{frontmatter.title}</h1>
    <p class="text-gray-600 italic mb-6">{frontmatter.description}</p>
    <div class="flex justify-between items-center mb-8">
      <div>
        <span class="block text-sm font-medium mb-1">Written by</span>
        <p class="text-lg font-semibold">{frontmatter.author}</p>
      </div>
      <div>
        <span class="block text-sm font-medium mb-1">Posted</span>
        <time class="text-lg font-semibold"
          >{moment(frontmatter.pubDate).format("MMMM Do, YYYY")}</time
        >
      </div>
    </div>
    <div class="mb-10">
      <img
        class="w-full max-w-sm mx-auto rounded-lg"
        src={frontmatter.image.url}
        alt={frontmatter.image.alt}
      />
    </div>
    <article class="prose dark:prose-dark mb-10">
      <slot />
    </article>
  </div>
</Layout>
